<section class="homeHero" >
  {% set themeUrl = function('get_stylesheet_directory_uri') %}
  <div class="homeHero__titleContainer">
    <div class="homeHero__arrowContainer">
      <img src={{ themeUrl ~ '/static/icons/arrow.svg' }} alt="">
    </div>
    <div class="font-XL">
      <strong>
        {{ post.meta("homehero_subtitle") }}
      </strong>
    </div>
    <h1 class="font-XXL font-light">{{ post.meta("homehero_title") }}</h1>
  </div>
  <div class="homeHero__imageContainer">
    {% include "components/image.twig" with {
      image : post.meta('homehero_image'),
      sizes: [400, 680, 1360]
    } %}
  </div>
</section>
